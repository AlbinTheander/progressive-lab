<div style="float:right">
  <h2>Shopping Cart</h2>
  <table>
    {{#each cart}}
      <tr><td>{{this.title}}</td><td>{{this.price}}kr</td></tr>
    {{else}}
      <tr><td>Nothing here, yet!</td></tr>
    {{/each}}
    {{#if total}}
      <tr><td><strong>Total:</strong></td><td>{{total}}kr</td></tr>
    {{/if}}
  </table>
</div>
<div>
  <h2>Books</h2>
  {{#each books}}

    <div>
      <img width="200" src="{{this.cover}}" />
      <div>
        {{this.title}} <br />
        {{this.author}} <br />
        <form method="POST" action="/shopping/buy" enctype="x-www-form-urlencoded">
          <input type="hidden" name="book_id" value="{{this.id}}" />
          <button type="submit">Buy {{this.price}}kr</button>
        </form>
      </div>
    </div>

  {{/each}}
</div>
